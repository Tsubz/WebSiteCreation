<!DOCTYPE html>

<section id="upload-imgs">
  <h2>
    Upload an image
  </h2>

  <form name="addfile" method="post" action="admin/upload_img" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exInputFile">Choose a file</label>
      <input type="file" name="exInputFile">
      <p>single file upload</p>
    </div>

    <button type="submit" name="submit" class="btn btn-default">Submit</button>
  </form>

</section>

<hr />

<section id="create-project">
  <h2>
    Create a new project
  </h2>
  <form name="addproject" method="post" action="admin/addproject">
    <div class="form-group">
      <label for="projectname">Project Name</label>
      <input type="text" name="projectname" class="form-control" placeholder="Project Name">
    </div>
    <div class="form-group">
      <label for="projectdesc">Project Description</label>
      <textarea class="form-control" rows ="10" name="projectdesc" placeholder="Your description here"></textarea>
    </div>

    <button type="submit" name="submit" class="btn btn-default">Create project</button>
  </form>
</section>

<hr />
