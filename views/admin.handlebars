<!DOCTYPE html>

<script src="/script/adminscript.js"></script>

<section id="upload-imgs">
  <h2>
    Upload an image
  </h2>

  <form name="addfile" method="post" action="admin/upload_img" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exInputFile">Choose a file</label>
      <input type="file" name="exInputFile" multiple>
      <p>single file upload</p>
    </div>

    <button type="submit" name="submit" class="btn btn-default">Submit</button>
  </form>
</section>

<hr />

<!-- Associate Project and images // Only one Checkbox "featuredimg" must be checked -->
<section id="project_image">
  <div class="container">
    <div class="row">
      <form method="POST" action="admin/checkboxes">
        <select name="selected">
        {{# each pjdata}}
          <option value="{{this.projectname}}">{{this.projectname}}</option>
         {{/each}}
      </select>
        <div class="form-group">
          {{# each imgdata}}
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
              <div class="display_img">
                <label class="btn btn-primary thumbnail">
                  <img src="{{ this.filename }}" alt="..." class="img-check">
                  <input type="checkbox" name="checkimg" class="hidden" autocomplete="off" value="{{ this.filename }}">
                </label>
              </div>
              <div class="checkFeatured">
                <input type="checkbox" name="featuredimg" autocomplete="off" value="{{ this.filename }}">
              </div>
            </div>
            {{/each}}
        </div>
        <input type="submit" value="Link images with project" class="btn btn-success">
      </form>
    </div>
  </div>
</section>

<section id="create-project">
  <h2>
    Create a new project
  </h2>
  <form name="addproject" method="post" action="admin/addproject">
    <div class="form-group">
      <label for="projectname">Project Name</label>
      <input type="text" name="projectname" class="form-control" placeholder="Project Name">
    </div>
    <div class="form-group">
      <label for="projectdesc">Project Description</label>
      <textarea class="form-control" rows ="10" name="projectdesc" placeholder="Your description here"></textarea>
    </div>

    <button type="submit" name="submit" class="btn btn-default">Create project</button>
  </form>
</section>

<hr />
