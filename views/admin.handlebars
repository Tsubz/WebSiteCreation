<section id="pjct">
  <div class="container-fluid">
    <div class="row">

      <div class="col-lg-12">
        <h1 class="page-header">project Gallery</h1>
      </div>
      {{# each pjdata}}
      <div class="col-lg-3 col-md-4 col-xs-6">
        <p>
          {{this.projectname}}<br />
          {{this.projectdesc}}<br />
        </p>
      </div>
       {{/each}}
    </div>
  </div>
</section>

<hr />

<section id="thumb-section">
  <div class="container-fluid">
    <div class="row">

      <div class="col-lg-12">
        <h1 class="page-header">Thumbnail Gallery</h1>
      </div>
      {{# each imgdata}}
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a class="thumbnail" href="#">
                    <img class="img-responsive" src="{{ this.filename }}" alt="">
                </a>
      </div>
       {{/each}}
    </div>
  </div>

</section>
